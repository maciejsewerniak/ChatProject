<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:keepScreenOn="true"
    tools:context=".activities.LyricsSlave">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/loadingButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:srcCompat="@android:drawable/ic_delete"
            tools:visibility="gone" />

        <Button
            android:id="@+id/sendConfrimation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="sendEmailAcceptanceRequest"
            android:text="Send email" />

        <Button
            android:id="@+id/sendToOtherDevice"
            android:layout_width="match_parent"
            android:onClick="sendTOtherDevice"
            android:layout_height="wrap_content"
            android:text="To other device" />

        <EditText
            android:id="@+id/mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/wifiStatusTf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>